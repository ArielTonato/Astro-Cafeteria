---
interface Props{
    title: string;
    description: string;
    image: string;
}

const { title, description, image } = Astro.props;
---

<div class="proceso my-10 md:flex md:items-center md:gap-10 md:justify-evenly">
    <picture>
        <img src={image} alt="">
    </picture>
    <div class="mt-3 text-left">
        <h2 class="uppercase text-3xl text-primario font-bold">{title}</h2>
        <p class="mt-4 leading-7">{description}</p>
    </div>
</div>

<style>
    h2::after{
        @apply content-[''] block w-[50%] h-1 bg-secundario;
    }
    .proceso:nth-child(even){
        @apply flex-row-reverse;
    }
</style>