---
import TitleCoffee from "../components/TitleCoffee.astro";
import { v2 as cloudinary } from "cloudinary";

cloudinary.config({
    cloud_name: "aridev21",
    api_key: "652162893854654",
    api_secret: "ivnzP6beTyhgbiiQHC8Ek5VqpTc",
    secure: true,
});

let imgs = cloudinary.api.resources({
    type: "upload",
    prefix: "img/galeria",
    max_results: 10,
    context: true,
    tags: true,
});
---

<section class="contenedor py-[50px]">
    <TitleCoffee cont1="Vive la" cont2="experiencia" />
    <div class="mt-10 grid grid-cols-2 gap-2 lg:grid-cols-4">
        {
            imgs.then((res) => {
                return res.resources.map((img: any) => (
                    <picture>
                        <img 
                            src={img.url}
                            alt="imagen galeria"
                            class="imagen w-[300px] h-[300px] object-cover"
                        />
                    </picture>
                ));
            })
        }
    </div>
</section>
<style>
    @media (min-width: 1024px) {
        img{
            width: 100%;
            min-height: 100%;
            max-height: 300px;
        }
        picture:nth-child(1){
            grid-row: 1/3;
        }
        picture:nth-child(2){
            grid-column: 2/4;
        }
        picture:nth-child(4){
            grid-row: 2/4;
        }
        picture:nth-child(5){
            grid-column: 3/5;
        }
        picture:nth-child(6){
            grid-column: 3/5;
        }
        picture:nth-child(7){
            grid-row: 3/5;
        }
        picture:nth-child(8){
            grid-column: 2/5;
        }
        picture:nth-child(9){
            grid-column: 1/3;
        }
        picture:nth-child(10){
            grid-column: 3/5;
        }
    }
</style>
