---
import NavLink from "./NavLink.astro";

interface Props {
    paginaActual: string;
}

const { paginaActual } = Astro.props;
---

<div class="navbar-container">
    <div class="navbar flex flex-col gap-4 lg:flex-row lg:justify-around lg:gap-24">
        <div class="w-[50%] m-auto md:w-[150px] lg:m-0">
            <img src="/Astro-Cafeteria/assets/logo.svg" alt="" />
        </div>
        <nav class="flex flex-col items-center gap-4 md:flex-row md:justify-center">
            <NavLink link="/Astro-Cafeteria" activo={paginaActual === "/"}
                >Inicio</NavLink
            >
            <NavLink
                link="/Astro-Cafeteria/nosotros"
                activo={paginaActual === "/nosotros"}>Nosotros</NavLink
            >
            <NavLink
                link="/Astro-Cafeteria/proceso"
                activo={paginaActual === "/proceso"}>Proceso</NavLink
            >
            <NavLink link="/Astro-Cafeteria/menu" activo={paginaActual === "/menu"}
                >men√∫</NavLink
            >
            <NavLink
                link="/Astro-Cafeteria/contacto"
                activo={paginaActual === "/contacto"}>contacto</NavLink
            >
        </nav>
    </div>
</div>

<style>
    .navbar-container {
        @apply relative z-50;
    }

    .navbar {
        @apply transition-all duration-300 ease-in-out;
    }
</style>
